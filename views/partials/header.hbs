
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400&display=swap" rel="stylesheet">

<link href="/css/tailwind.css" rel="stylesheet">

<header class="fixed top-0 left-0 w-full bg-[#f1f1f1] shadow-md z-[999] h-[150px] flex items-center px-6 md:px-8">
  <div class="w-full flex justify-between items-center max-w-7xl mx-auto h-[80px]">
    
    <!-- Left Menu (Desktop) -->
    <nav class="hidden md:flex space-x-6 text-gray-500 text-2xl font-sans">



      <a href="/" class="{{#if activeHome}}active{{/if}} text-gray-500 visited:text-gray-500 hover:text-[#b5651d] no-underline transition-colors duration-300">Home</a>
      
      <a href="/learn" class="{{#if activeLearn}}active{{/if}} text-gray-500 visited:text-gray-500 hover:text-[#b5651d] no-underline transition-colors duration-300">Learn Pottery</a>

      <a href="/join" class="{{#if activeJoin}}active{{/if}}  text-gray-500 visited:text-gray-500 hover:text-[#b5651d] no-underline transition-colors duration-300">Join Studio</a>
      
    </nav>

    <!-- Logo (Centered) -->
    <a href="/" class="flex justify-center items-center">
      <img src="https://res.cloudinary.com/dnemf1asq/image/upload/v1751224012/haticelogo_y19igp.png"
        alt="HeartPottery Logo"
        class="h-auto w-[150px] md:w-[180px] object-contain mt-2">
    </a>

        <!-- Right Menu (Desktop) -->
        <nav class="hidden md:flex space-x-6 text-gray-500 text-2xl font-sans z-10">
        
        <a href="/events" class="{{#if activeGallery}}active{{/if}}  text-gray-500 visited:text-gray-500 hover:text-[#b5651d] no-underline transition-colors duration-300">Events</a>

        <a href="/about" class="{{#if activeAbout}}active{{/if}} text-gray-500 visited:text-gray-500 hover:text-[#b5651d] no-underline transition-colors duration-300">About</a>
        
        <a href="/contact" class="{{#if activeContact}}active{{/if}}  text-gray-500 visited:text-gray-500 hover:text-[#b5651d] no-underline transition-colors duration-300 ">Contact | FQA</a>
        <!-- Desktop sepet simgesi -->
          <a href="/checkout" class="cart-icon-container relative flex items-center text-gray-500 hover:text-[#b5651d] no-underline transition-colors duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-9 h-9">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 1 0-7.5 0v4.5m11.356-1.993 1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 0 1-1.12-1.243l1.264-12A1.125 1.125 0 0 1 5.513 7.5h12.974c.576 0 1.059.435 1.119 1.007ZM8.625 10.5a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm7.5 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
            </svg>
            
            {{#if (cartHasItems)}}
              <!-- Sayı badge -->
              <span class="cart-badge absolute -top-2 -right-2 bg-red-500 text-white text-xs rounded-full h-6 w-6 flex items-center justify-center">
                {{cartItemCount}}
              </span>
              
             
              <!-- Sepet içine yıldız ekle -->
                <span class="absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1 pointer-events-none">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-gray-500">
                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                  </svg>
                </span>
            {{/if}}
          </a>
      </nav>



 <!-- Mobile Menu Button -->
<div class="md:hidden flex items-center" style="margin-right: 50px;">
  <button id="mobile-menu-button" class="hamburger-menu">
    <span></span>
    <span></span>
    <span></span>
  </button>
</div>

<!-- Mobile Menu -->
<div id="mobile-menu" class="fixed inset-0 bg-[#f1f1f1] z-50 flex flex-col items-center justify-start space-y-6 text-xl overflow-y-auto max-h-screen px-4 pt-24 pb-6 hidden">
 
  <!-- Close Button -->
  <button id="close-menu" class="absolute top-6 left-6 text-3xl">&times;</button>

  <!-- Menu Items with .menu-item class -->
  <a href="/" class="menu-item">Home</a>
  <a href="/learn" class="menu-item">Learn Pottery</a>
  <a href="/join" class="menu-item">Join Studio</a>
  <a href="/events" class="menu-item">Events</a>
  <a href="/about" class="menu-item">About</a>
  
  <a href="/contact" class="menu-item">Contact | FQA</a>
  <!-- Mobil Sepet Linki - Düzeltilmiş hali -->
<a href="/checkout" class="menu-item flex items-center">
  <span>Cart</span>
  <div class="relative ml-2">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 1 0-7.5 0v4.5m11.356-1.993 1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 0 1-1.12-1.243l1.264-12A1.125 1.125 0 0 1 5.513 7.5h12.974c.576 0 1.059.435 1.119 1.007ZM8.625 10.5a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm7.5 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
    </svg>
    {{#if (cartHasItems)}}
      <span class="absolute -top-3 -right-3 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">
      {{cartItemCount}}
        </span>
    {{/if}}
  </div>
</a>
</div>

</header>



