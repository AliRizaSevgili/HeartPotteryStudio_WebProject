<section class="text-gray-700 body-font mt-4">
  <div class="container px-5 py-12 mx-auto">
    <div class="text-center mb-16">
      <h1 class="text-4xl font-semibold tracking-tight text-balance text-gray-500 sm:text-5xl">{{title}}</h1>
      
      {{#if categoryName}}
        <p class="mt-4 text-xl text-gray-500">Browse our {{categoryName}} pottery classes</p>
      {{else if searchQuery}}
        <p class="mt-4 text-xl text-gray-500">Search results for: "{{searchQuery}}"</p>
      {{else}}
        <p class="mt-4 text-xl text-gray-500">Find the perfect pottery class for your skill level</p>
      {{/if}}
    </div>

    <div class="flex flex-wrap -m-4">
      {{#each classes}}
        <div class="p-4 md:w-1/3">
          <div class="h-full border-2 border-gray-200 rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow">
            <img class="lg:h-64 md:h-36 w-full object-cover object-center" src="{{this.image}}" alt="{{this.title}}">
            <div class="p-6">
              <h2 class="text-xl font-medium text-gray-900 mb-2">{{this.title}}</h2>
              <p class="text-gray-600 mb-3">{{this.description}}</p>
              <div class="flex items-center justify-between">
                <p class="text-[#b5651d] font-medium">{{this.price}}</p>
                <a href="/classes/{{this.slug}}" class="bg-[#b5651d] text-white px-4 py-2 rounded hover:bg-[#8c4516] transition">Learn More</a>
              </div>
            </div>
          </div>
        </div>
      {{else}}
        <div class="w-full text-center py-12">
          <p class="text-lg text-gray-500">No classes found. Please check back later!</p>
        </div>
      {{/each}}
    </div>
  </div>
</section>